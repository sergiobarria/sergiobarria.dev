---
import clsx from 'clsx';
import SocialLinks from '~/components/SocialLinks.astro';

import { navLinks } from '../../../site.json';

const pathname = new URL(Astro.request.url).pathname;
---

<footer>
	<div
		class="container mx-auto max-w-screen-lg border-t-[1px] border-neutral-300 dark:border-neutral-300/10 pt-8 pb-4"
	>
		<div class="text-md flex items-center justify-center">
			<div
				class="flex flex-col items-center space-y-1 text-neutral-500 dark:text-typography text-sm"
			>
				<p class="space-x-10 mb-3">
					{
						navLinks.map((link) => (
							<a
								href={link.href}
								class={clsx(
									{
										'font-bold bg-neutral-300 dark:bg-neutral-500 dark:text-typography':
											pathname === link.href,
										'animated-underline': pathname !== link.href,
									},
									'px-2 py-1 rounded-md'
								)}
							>
								{link.label}
							</a>
						))
					}
				</p>
				<SocialLinks size="small" />
				<p>&copy; Copyright {new Date().getFullYear()} by Sergio Barria</p>
				<p>
					Built with {' '}
					<a
						href="https://astro.build/"
						target="_blank"
						rel="noopener noreferrer"
						class="text-accent font-medium hover:text-accent"
					>
						Astro,
					</a>
					<a
						href="https://tailwindcss.com/"
						target="_blank"
						rel="noopener noreferrer"
						class="text-accent font-medium hover:text-accent"
					>
						Tailwind CSS.
					</a>
					Content with
					<a
						href="https://mdxjs.com/"
						target="_blank"
						rel="noopener noreferrer"
						class="text-accent font-medium hover:text-accent"
					>
						MDX</a
					>
				</p>
			</div>
		</div>
	</div>
</footer>
